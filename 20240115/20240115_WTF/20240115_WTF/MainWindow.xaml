<Window x:Class="_20240115_WTF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_20240115_WTF"
        mc:Ignorable="d"
        Title="Grid" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <!-- ablak középre igazítása WindowStartupLocation="CenterScreen">-->
    <Grid>
        <!-- 3*4-es kialakítása-->
        <!--sorok kialakitása-->
        <Grid.RowDefinitions>

            
            <RowDefinition Height="100"/> <!--első sor-->
            <RowDefinition Height="125"/>
            <RowDefinition Height="50*"/>


        </Grid.RowDefinitions>
        <!--Oszlopok definiálása-->
        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="150"/> <!--első oszlop-->
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="130"/>
            <ColumnDefinition Width="40*"/>

        </Grid.ColumnDefinitions>

        <Button Grid.Row="0" Grid.Column="0" Content="1. sor, 1. cella" BorderBrush="Black" BorderThickness="3" Background="Aqua" Foreground="Black" FontWeight="Bold" FontSize="16"/>
        <Button Grid.Row="0" Grid.Column="1" Content="1. sor, 2. cella" Width="100" Height="50"/>
        <Button Grid.Row="0" Grid.Column="2" Content="1. sor, 3. cella" Width="100" Height="50" VerticalAlignment="Top" HorizontalAlignment="Right"/>
        <TextBlock Grid.Row="1" Grid.Column="3">
            <Run Text="Kék" Foreground="Blue"/>
            <Run Text="Félkövér" FontWeight="Black"/>
            <Run Text="16 pt" FontSize="16"/>
            <Run Text="Dőlt" FontStyle="Italic"/>
            <Run Text="Aláhúzott" TextDecorations="Underline"/>
            
        </TextBlock>


    </Grid>
</Window>
